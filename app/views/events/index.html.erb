<div>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Size</th>
        <th>Data actions</th>

      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= link_to(image_tag(event.picture_url(:thumb)))if event.picture? %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.size %></td>
        <td>
          <%= link_to 'Show', event, class: 'button' %>
          <%= link_to 'Edit', edit_event_path(event), class: 'button' %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
    <%= will_paginate @posts %>
  <br>
  <%= link_to 'New Event', new_event_path, class: 'btn-default' %>
</div>
